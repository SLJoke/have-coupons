.tab-ctrl {
  margin: 84rpx 0 24rpx;
  background-color: #ffffff;
  padding: 32rpx 30rpx;
}

.header {
  display: flex;
  justify-content: space-between;
}

.header .txt1 {
  font-size: 34rpx;
  color: #333333;
  border-left: 4rpx solid #009689;
  padding-left: 20rpx;
}

.header .txt2 {
  font-size: 28rpx;
  color: #666666;
}

.header .box1 {
  display: flex;
  align-items: center;
}

.content {
  width: 100%;
  height: 300rpx;
  white-space: nowrap;
}

.content .item-wrapper {
  display: inline-block;
  margin-right: 16rpx;
  padding-bottom: 2rpx;
}

.content .item {
  width: 220rpx;
  height: 280rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}

.content .item .text .txt1 {
  display: block;
  text-align: center;
  font-size: 28rpx;
  color: #333333;
}

.content .item .text .txt2 {
  display: block;
  text-align: center;
  font-size: 24rpx;
  color: #666666;
}

.content .item .btn {
  padding: 0;
  margin: 0;
  outline: none;
  width: 120rpx;
  height: 48rpx;
  line-height: 48rpx;
  font-size: 24rpx;
  color: #FF995F;
  border-radius: 24rpx;
  border: 1rpx solid #FF995F;
  background-color: transparent;
}