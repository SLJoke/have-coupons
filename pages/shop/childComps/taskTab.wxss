.day-task {
  padding: 24rpx 32rpx;
}

.day-task .task-item {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  padding: 0 20rpx;
  border-radius: 20rpx;
  height: 120rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.day-task .task-item .text {
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-left: 24rpx;
}

.day-task .task-item .text .title {
  font-size: 28rpx;
  color: #333333;
}

.day-task .task-item .text .mark {
  font-size: 24rpx;
  color: #666666;
}

.day-task .task-item .btn {
  padding: 0;
  margin: 0;
  outline: none;
  width: 120rpx;
  height: 48rpx;
  line-height: 48rpx;
  font-size: 24rpx;
  color: #FF995F;
  border-radius: 24rpx;
  border: 1rpx solid #FF995F;
  background-color: transparent;
}